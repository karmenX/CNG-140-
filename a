#include <stdio.h>

void pay_amount(int dollars, int *twenties, int *tens, int *fives, int *ones);

int main() {

    int amount,twenties=0,tens=0,fives=0,ones=0;
    printf("Enter the amount to pay: ");
    scanf("%d",&amount);
    pay_amount(amount,&twenties,&tens,&fives,&ones);
    printf("You need to pay %dx$20 + %dx$10 + %dx$5 + %dx$1",twenties,tens,fives,ones);

    return 0;
}
void pay_amount(int dollars, int *twenties, int *tens, int *fives, int *ones){

    *twenties=dollars/20;
    *tens=(dollars-(*twenties*20))/10;
    *fives=(dollars-((*twenties*20)+(*tens*10)))/5;
    *ones=(dollars-((*twenties*20)+(*tens*10)+(*fives*5)));
    
}
